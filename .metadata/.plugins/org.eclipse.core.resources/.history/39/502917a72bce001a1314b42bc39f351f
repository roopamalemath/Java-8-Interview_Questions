			System.out.print(a[i]+ " ");
		}
	}
	
	public void sortArray(int[] arr, int l, int r) {
		// TODO Auto-generated method stub
	if(l<r) {
		int m=l+r/2;
		System.out.println(m);
		sortArray(arr,l,m);
		sortArray(arr,m+1,r);
		merge(arr, l, m, r);
	}
	}
	
